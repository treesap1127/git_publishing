<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Event">

	<select id="list" resultType="Event">
		SELECT * FROM event
	</select>
	
	<insert id="add">
		INSERT INTO event
		VALUES (NULL, #{eventName}, #{eventDate}, #{eventInfo}, #{id})	
	</insert>
	
	<select id="item" resultType="Event">
		SELECT * FROM event
		WHERE event_id=#{eventId}
	</select>
	
	<update id="update">
		UPDATE event
		SET eventName=#{eventName}, eventInfo=#{eventInfo} WHERE event_id=#{eventId}
	</update>
	
	<delete id="delete">
		DELETE FROM event
		WHERE event_id=#{eventId}
	</delete>
	
</mapper>