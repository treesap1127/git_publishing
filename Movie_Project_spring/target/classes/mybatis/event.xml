<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Event">

	<select id="list" resultType="Event">
		SELECT * FROM event
	</select>
	
	<resultMap type="Event" id="EventMap">
		<id column="event_id" property="eventId" />
		<result column="event_name" property="eventName"/>
		<result column="event_date" property="eventDate"/>
		<result column="event_info" property="eventInfo"/>
		<result column="id" property="id"/>
		<result column="event_viewcnt" property="eventViewcnt"/>
		<result column="start_date" property="startDate"/>
		<result column="end_date" property="endDate"/>
		
		<collection property="images" column="eventId" ofType="EventImage" javaType="ArrayList">
			<id column="event_id" property="eventId" />
			<result column="event_id" property="eventId"/>
			<result column="file_name" property="filename"/>
			<result column="uuid" property="uuid"/>			
		</collection>
	</resultMap>
	
	<insert id="add">
		INSERT INTO event
		VALUES (NULL,#{id},#{eventName}, DATE_FORMAT(NOW(),'%Y-%m-%d'), #{eventInfo}, #{eventViewcnt},DATE_FORMAT(#{startDate},'%Y-%m-%d'),DATE_FORMAT(#{endDate},'%Y-%m-%d'))	
	</insert>
	
	<select id="item" resultType="Event">
		SELECT * FROM event
		WHERE event_id=#{eventId}
	</select>
	
	<update id="update">
		UPDATE event
		SET event_name=#{eventName}, event_info=#{eventInfo},start_date=#{startDate},end_date=#{endDate} WHERE event_id=#{eventId}
	</update>
	
	<update id="endupdate">
		UPDATE event
		SET event_name=#{eventName}, event_info=#{eventInfo},end_date=#{endDate} WHERE event_id=#{eventId}
	</update>
	
	<delete id="delete">
		DELETE FROM event
		WHERE event_id=#{eventId}
	</delete>
	
	<sql id="search">		
		<where>
			<if test="search==1">
				event.eventId=#{keyword}
			</if>
			<if test="search==2">
				event.eventName LIKE CONCAT(CONCAT('%',#{keyword}),'%')
			</if>			
			<if test="search==3">
				member.memberId=${keyword}
			</if>
		</where>
	</sql>
	
	<select id="total" resultType="Integer">
		SELECT COUNT(*) FROM event
		<include refid="search"></include>
	</select>
	
	
	<!-- 조회수 올리기 -->
	<update id="viewcnt">
		update event 
		set event_viewcnt = event_viewcnt + 1 
		 where event_id = #{eventId}
	</update>
</mapper>