<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="Board">
	<select id="list" resultType="Board">
		SELECT * FROM board_${boardId}
		<include refid="search"></include>
	</select>

	<insert id="add">
		INSERT INTO board_${boardId}
		VALUES
		(null,#{subject},#{id},DATE_FORMAT(NOW(),'%Y-%m-%d'), #{contents},#{viewCount})
	</insert>

	<select id="item" resultType="Board">
		SELECT * FROM board_${boardId}
		WHERE article_id=#{articleId}
	</select>

	<update id="update">
		UPDATE board_${boardId}
		SET subject=#{subject},
		contents=#{contents}
		WHERE article_id=#{articleId}
	</update>

	<delete id="delete">
		DELETE FROM board_${boardId}
		WHERE
		article_id=#{articleId}

	</delete>



	<sql id="search">
		<where>
			<if test="search==1">
				subject LIKE CONCAT('%',CONCAT(#{keyword},'%'))
			</if>
			<if test="search==2">
				contents LIKE CONCAT('%',CONCAT(#{keyword},'%'))
			</if>
			<if test="search==3">
				memberId=${keyword}
			</if>
		</where>
	</sql>


	<select id="total" resultType="Integer">
		SELECT COUNT(*) FROM board_${boardId}
		<include refid="search"></include>
	</select>
</mapper>